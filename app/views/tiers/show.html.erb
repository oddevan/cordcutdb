<div class="page-header">
  <%= link_to tiers_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_tier_path(@tier), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show tier</h1>
</div>

<dl class="dl-horizontal">
  <dt>Service:</dt>
  <dd><%= @tier.service.name %></dd>

  <dt>Name:</dt>
  <dd><%= @tier.name %></dd>

  <dt>Description:</dt>
  <dd><%= @tier.description %></dd>

  <dt>Monthly cost:</dt>
  <dd><%= @tier.monthly_cost %></dd>

  <dt>Annual cost:</dt>
  <dd><%= @tier.annual_cost %></dd>

  <dt>Prereq:</dt>
  <dd><%= @tier.prereq ? @tier.prereq.name : 'n/a' %></dd>

</dl>
