<%= form_for(@service, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @service.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@service.errors.count, "error") %> prohibited this service from being saved:</h4>

      <ul>
      <% @service.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :website, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :website, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :on_demand, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :on_demand, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :live, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :live, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Regions', class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <div class="row">
        <%= f.collection_check_boxes(:region_ids, Region.all, :id, :name, {}, {}) do |b| %>
        <div class="col-sm-6">
          <%= b.label { b.check_box + ' ' + b.text} %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :review, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :review, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
