<div class="page-header">
  <%= link_to services_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <% if current_user %>
  <%= link_to edit_service_path(@service), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <% end %>
  <h1><%= @service.name %></h1>
</div>

<p>
  <%= raw markdown.render(@service.description) %>
</p>

<div class="page-header">
  <h2>Available Tiers</h2>
</div>

<% @service.tiers.each do |tier| %>
  <h3><%= tier.name %></h3>
  <p><strong>Cost:</strong> <%= tier.annual_cost %> / year
  <% if tier.prereq %>
    + <%= tier.prereq.name %>
  <% end %>
  </p>
  
  <% if tier.channels.any? %>
    <p><strong>Channels:</strong>
    <% tier.channels.each do |channel| %>
      <%= link_to channel.name, channel, class: 'label label-default' %>
    <% end %>
    </p>
  <% end %>
<% end %>